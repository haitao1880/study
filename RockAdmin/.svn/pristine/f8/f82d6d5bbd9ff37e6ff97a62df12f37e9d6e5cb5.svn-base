<script type="text/javascript">
$(document).ready(function(){	  
	$("#datepicker").datepicker();	
	$('#btnSave').click(function() {
		var packid = $.trim($("input[name='packid']").val());
		var pavalue = $.trim($("input[name='pavalue']").val());
		var content = $("#content").html();
		if(packid == '')
		{
			alert('请输入礼包编号');
			return false;
		}
		
		if(pavalue == '')
		{
			alert('礼包激活码不能为空！');
			return false;
		}

	});

});

</script>
