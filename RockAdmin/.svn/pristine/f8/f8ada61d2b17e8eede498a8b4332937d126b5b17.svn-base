<!DOCTYPE html>
<html><head>
<meta charset="UTF-8">
<title>SIM列表</title>
<link type="text/css" rel="stylesheet" href="{$psys_css}public.css" />
<link type="text/css" rel="stylesheet" href="{$psys_css}table.css" />
</head>
<body>
<form action="/sim/del" method="get">
<table class="hovertable" width="100%" border="0" cellpadding="0" cellspacing="1" bgcolor="#417eb7"  >
<caption><h4>SIM列表</h4></caption>
<tr class="table-head" bgcolor="#2d68a0">
	
	<th>服务器编号</th>
    <th>卡号</th>
    <th>ICCID</th>
    <th>PUK</th>
    <th>激活日期</th>
    <th>下次续费日期</th>
    <th>负责人</th>
    <th>备注</th>
    <th>操作</th>  
</tr>
{foreach $list as $v}
<tr class="tbody" bgcolor="#FFFFFF">
	
	<td></td>
    <td>{$v.cardnum}</td>
    <td>{$v.iccid}</td>
    <td>{$v.puk}</td>
    <td>{$v.activation}</td>
    <td>{$v.renewaldate}</td>
    <td>{$v.leader}</td>
    <td>{$v.remark}</td>
    <td>
    	<a href="/sim/edit?id={$v.id}">编辑</a> / <a href="/sim/del?id={$v.id}">删除</a>
    </td>
</tr>
{/foreach}
</table>
<div class="pages">
  <ul class="pagination-digg">
    
   
 <li class="previous"><a href="?page=1">&laquo;First</a></li>   
{if $cur_page gt 1}
  <li class="previous"><a href="?page={$cur_page-1}">&laquo;Previous</a></li>
{else}
  <li class="previous-off"> &laquo;Previous</li>
{/if}
	{if $endNum lt $allpage}	
         {for $p=$startNum to $endNum}
                
                     {if $cur_page eq $p}
                     <li class="active">{$p}</li>
                     {else}
                     <li><a href="?page={$p}">{$p}</a></li> 
                     {/if}
                   
          {/for} 
     {else}
        {for $p=$startNum to $allpage}
                
                     {if $cur_page eq $p}
                     <li class="active">{$p}</li>
                     {else}
                     <li><a href="?page={$p}">{$p}</a></li> 
                     {/if}
                   
          {/for}     
     {/if}     
        
{if $cur_page lt $allpage}
    <li class="next">
    <a href="?page={$cur_page+1}">Next &raquo;</a>
    </li>
{else}
    <li class="next-off">
    Next &raquo;
    </li>
{/if}
   <li class="next">
    <a href="?page={$allpage}">Last &raquo;</a>
    </li>
    <li class="next-off">
   {$cur_page}/{$allpage} Page
    </li>
    <!--  
    <li class="del">
   		<button type="submit" name="submit" class="but">DELETE</button>
    </li> 
    -->   
  </ul>
</div>
</form>
</body>
</html>