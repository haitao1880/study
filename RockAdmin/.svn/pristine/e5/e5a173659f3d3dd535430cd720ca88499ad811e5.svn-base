{literal}
<script>
function show_one(date)
{
  var $title = '<caption>'
          + '<h3>每日详情</h3>'
        +'</caption>'
        +'<tr  bgcolor="#417eb7">'
          +   '<th>操作</th>'
          +   '<th>安卓</th>'
          +   '<th>苹果</th>'
          +   '<th>其它</th>'
        +'</tr>'; 
  $("#detailcon").html($title);
  
  $.ajax({
        type: "POST",
        data: { date: date, ajax:1,stationid:{/literal}{$stationid}{literal},counttype:{/literal}{$counttype}{literal}},
        url: '/station/webCountND',
        success: function (data) {  

            if (data.code == 1 ) {
              $.each(data.allrow, function (index, item) {
                 $('#detailcon').append(
                  '<tr bgcolor="#FFFFFF"> '   
            +   ' <td>'+item.name+'</td>'
            +   ' <td>'+item.android+'</td>'
            +   ' <td>'+item.ios+'</td>'
            +   ' <td>'+item.Else+'</td>'
            +  '</tr>'   
                 );     
                
              });
              
                return;
            } else  {
            	
                alert('未知错误！');
            }
        }
    });
              
  popWin("detail");
}

$(function()
{
  $('.close').click(function(){
    $('#maskLayer').hide();
  });
  
});

function show_two(date)
{
  var $title = '<caption>'
          + '<h3>每日详情</h3>'
        +'</caption>'
        +'<tr  bgcolor="#417eb7">'
          +   '<th>操作</th>'
          +   '<th>Android</th>'
          +   '<th>Ios</th>'
          +   '<th>Else</th>'
        +'</tr>'; 
  $("#detailcon").html($title);
  
  $.ajax({
        type: "POST",
        data: { date: date, ajax:1,stationid:{/literal}{$stationid}{literal},counttype:{/literal}{$counttype}{literal}},
        url: '/station/webCountND2',
        dataType:"json",
        success: function (data) {  
        
            if (data.code == 1 ) {
             
              $.each(data.allrow, function (index, item) {
            	  if(!item.android){
            		  item.android = 0;
            	  }
            	  if(!item.ios){
            		  item.ios = 0;
            	  }
            	  if(!item.Else){
            		  item.Else = 0;
            	  }
                 $('#detailcon').append(
                  '<tr bgcolor="#FFFFFF"> '   
            +   ' <td>'+item.name+'</td>'
            +   ' <td>'+item.android+'</td>'
            +   ' <td>'+item.ios+'</td>'
            +   ' <td>'+item.Else+'</td>'
            +  '</tr>'   
                 );     
                
              });
              
                return;
            } else  {
            	
                alert('未知错误！');
            }
        }
    });
              
  popWin("detail");
}
</script>
{/literal}

{literal}
<style type="text/css">
*{margin:0;padding:0;font-size:14px;text-decoration:none}
td{width:190px;}

/* detail */
#detail{position:absolute;width:800px;height:400px;border:1px solid #ccc;background:#efefef;display:none; }
#detail .tit{background:#ddd;display:block;height:33px;cursor:move;}
#detail .tit i{float:right;line-height:33px;padding:0 8px;cursor:pointer;}
#pointer{
  cursor:pointer;
}
</style>
{/literal}
</head>

<body>

<table width="100%" border="0" cellpadding="0" cellspacing="1" bgcolor="#a8cbec">
  <caption>
  	<h3>WEB流程</h3>
  </caption>
  
  <tr bgcolor="#ABCDEF">
    <form method="post" action="/station/webCountNew" enctype="multipart/form-data">
    	<td>统计方式选择：</td>
	    <td>
	      <select name="counttype">
	        <option value="1" {if $counttype eq 1}selected{/if}>dolog</option>
	        <option value="2" {if $counttype eq 2}selected{/if}>web_record</option>
	      </select>
	    </td>
	   	{include file="station/station.html"}
    </form>
   
  </tr>

  <tr bgcolor="#417eb7">
  	<td>日 &nbsp; 期</td>
  	<td>WIFI连接</td>
  	<td>广告页1/uv</td>
  	<td>注册页/uv</td>
  	<td>新注册/uv</td>
  	<td>广告页2/uv</td>
  	<td>sindex/uv</td>
  	<td>train下载/uv</td>
  	<td style="width:150px">详情</td>
  </tr>
  {foreach $totallist as $v}
  <tr bgcolor="#FFF">
  	<td>{$v.date}</td>
  	<td>{$v.link}</td>
  	<td>{$v.ad}</td>
  	<td>{$v.register}</td>
  	<td>{$v.login}</td>
  	<td>{$v.welcome}</td>
  	<td>{$v.sindex}</td>
  	<td>{$v.down}</td>
  	<td>{if $counttype neq 3}<a href="javascript:;" onclick="show_one('{$v.date}')">查看1 /</a><a href="javascript:;" onclick="show_two('{$v.date}')"> 查看2</a>{/if}</td>
  </tr>
  {/foreach}
</table>
<div id="detail">
	<div class="tit"><i class="close">关闭</i></div>
	<div class="showdetail" style="height:365px; overflow-y:auto;">
		<table style="min-width: 600px;" border="0" cellpadding="0" cellspacing="1" bgcolor="#a8cbec" id='detailcon'>	

		</table>
	</div>
</div>
</body>
</html>