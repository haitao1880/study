{include file="include/header.html"}
{literal}
<script type="text/javascript">

$(function(){
    $(document).ready(function(){
        checkloginfo();
        var date = $('#date').text();
        var data = {};
            data.ajax=1;
            data.date = date;
            $.post('/station/graphadpv',data,function(res){
                PaiTing(date+'广告1 PV 详情',-20,'',60,res.ad1.x_cat,'PV',res.ad1.y_data,'ad1','column');
                PaiTing(date+'广告2 PV 详情',-20,'',60,res.ad2.x_cat,'PV',res.ad2.y_data,'ad2','column');
            },'json');
        //SingleGraph(data,date+'广告1 PV 详情','spline','数量','/station/stationinfo?ajax=1&isgrahp=1&date='+date,'ad1'); 
        //SingleGraph(data,date+'广告2 PV 详情','spline','数量','/station/stationinfo?ajax=1&isgrahp=1&date='+date,'ad2');     
    });

});

</script>
{/literal}
</head>
<body>

<form action="/station/adshowpv" method="post">
    <div class="search" >
        搜索:
        {literal}
        <input class="Wdate" type="text" onFocus="WdatePicker()" name="date"/>
        {/literal}
        <input type="submit" class="button2" value="搜索" id="search"/>
    </div>
</form>
<table id="flex1" style="display:none"></table>
<div id="container" style="height:450px;width:1400px;margin:10px auto;border:1px solid #ccc;background:white;">
    
    <div style="text-align:center;margin:0 auto;border:1px solid #ccc;height:450px;float: left;width:698px;" id="ad1"><img style="margin-top:195;" src="{$psys_img}load.gif"></div>
    <div style="text-align:center;margin:0 auto;border:1px solid #ccc;height:450px;float: right;width:698px;" id="ad2"><img style="margin-top:195;" src="{$psys_img}load.gif"></div>
    


</div>
<div style="display:none" id="date">{$date}</div>



</body>
{literal}
<script type="text/javascript">
function checkloginfo(){
        var date = $('#date').text();
         $("#flex1").flexigrid
        (
            {

                url: '/station/adshowpvinfo?ajax=1&date='+date,

                dataType: 'json',
                colModel : [
                    {display: '日期', name : 'date', width : 250, sortable : true, align: 'center'},
                    {display: '广告名', name : 'ad_name', width : 250, sortable : true, align: 'center'},
                    {display: '广告位', name : 'show_type', width : 250, sortable : true, align: 'center'},
                    {display: 'Android', name : 'android', width : 150, sortable : true, align: 'center'},
                    {display: 'Ios', name : 'ios', width : 150, sortable : true, align: 'center'},
                    {display: 'Other', name : 'other', width : 150, sortable : true, align: 'center'},
                    {display: 'Total', name : 'total', width : 250, sortable : true, align: 'center'}
                    ],
                buttons : [       
                    {separator: true}
                    //{name: 'A', onpress: sortAlpha},

                    ],
                sortname: "total",
                sortorder: "desc",
                usepager: true,
                title: date+'广告展示PV',
                useRp: true,
                rp: 10,
                showTableToggleBtn: true,
                //onSuccess: stationgraph,
                // width: document.body.clientWidth ,
                // height: document.body.clientHeight - 400
            }
        ); 
}

</script>
