{include file="include/header.html"}
{literal}
<script type="text/javascript">

$(function(){
        $(document).ready(function(){
            var msg = '';
            var xtitle = '';
            var data = {};
            var pictype = $('#pictype').val()?$('#pictype').val():'line';
            var station = '青岛南';
                data.ajax = 1;
                data.station = $('#station').val()?$('#station').val():1;
                data.classtype=0;
                station = stations(data.station);
                 totalpaiting(data,pictype,station);
        });
      $('#search').click(function(){
        var msg = '';
        var xtitle = '';
        var data = {};
        var pictype = $('#pictype').val()?$('#pictype').val():'line';
        var station = '青岛南';
            data.ajax = 1;
            data.station = $('#station').val()?$('#station').val():1;
            station = stations(data.station);
            data.classtype = $('#classtype').val();
            switch(data.classtype){
                case '1':
                    msg = '用户连接走势';
                    xtitle = '连接数量';
                    break;
                
                case '2':
                    msg = '用户注册走势';
                    xtitle = '注册数量';
                    break;
                
                case '3':
                    
                    msg = '用户下载走势';
                    xtitle = '下载数量';
                    break;
                
                case '4':
                   
                    msg = '转化率走势';
                    xtitle = '转化率(%)';
                    break;
                
                case '5':
                    msg = '每日流程步骤流失率';
                    xtitle = '流失率(%)';
                    break;
                
                case '6':
                    msg = '每日流程数据概况';
                    xtitle = '数量';
                    break;
             }
            
            data.sdate = $('#sdate').val();
            data.edate = $('#edate').val();
            if (data.classtype == '0') {
                totalpaiting(data,pictype,station);
            }else{
                graph(data,station,msg,pictype,xtitle); 
            }
           
      });

     $('#classtype').change(function() {
        var type = $(this).val();
        if(type=='5' || type=='6' || type=='0'){
            $('#sdate').hide();
        }else{
            $('#sdate').show();
        }
     });

});
