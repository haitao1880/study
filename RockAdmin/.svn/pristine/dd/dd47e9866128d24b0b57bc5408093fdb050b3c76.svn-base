    <div style="text-align:center;margin:0 auto;border:1px solid #ccc;height:290px;float: right;width:698px;" id="down"><img style="margin-top:195;" src="{$psys_img}load.gif"></div>
    <div style="text-align:center;margin:0 auto;border:1px solid #ccc;height:290px;float: left;width:698px;" id="rate"><img style="margin-top:195;" src="{$psys_img}load.gif"></div>
    <div style="text-align:center;margin:0 auto;border:1px solid #ccc;height:290px;float: left;width:698px;" id="rose"><img style="margin-top:195;" src="{$psys_img}load.gif"></div>
