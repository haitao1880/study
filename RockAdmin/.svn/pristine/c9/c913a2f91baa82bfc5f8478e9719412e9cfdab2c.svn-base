	public function GetAdsOne($idstr){
		$this->SetDb('db-rht_idc');
		$this->SetTable("rhi_ads_ppts");
		$sql = 'SELECT id,adname  FROM '.$this->GetTableName().' where flag=1 and colid=5 and id in ('.$idstr.')';
