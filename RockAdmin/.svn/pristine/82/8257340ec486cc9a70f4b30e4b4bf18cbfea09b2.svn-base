  .home {
    opacity: 1;
    overflow-x: hidden;
    overflow-y: auto;
    
}
.modal-dialog {
    margin: 30px auto;
    width: 850px;
}
.hiddenbody{
    
    overflow:  hidden;
}
.modal.fade .modal-dialog {
    transform: translate(0px,0px);
