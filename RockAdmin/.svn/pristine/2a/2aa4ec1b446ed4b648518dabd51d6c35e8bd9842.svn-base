<script type="text/javascript">

$(function(){
    $(document).ready(function(){
        checkloginfo();
        var date = $('#date').text();
        var data = {};
            data.ajax=1;
            data.date = date;
        SingleGraph(data,date+'车站流程对比图','spline','数量','/station/stationinfo?ajax=1&isgrahp=1&date='+date,'container');     
    });

});

</script>
