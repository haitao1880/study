<!DOCTYPE html>
<html><head>
<meta charset="UTF-8">
<title>积分商城订单列表</title>
<link type="text/css" rel="stylesheet" href="{$psys_css}public.css" />
<link type="text/css" rel="stylesheet" href="{$psys_css}table.css" />
<script type="text/javascript" src="{$psys_js}lib/jquery-1.11.1.js"></script>
{literal}
<script type="text/javascript">
</script>
{/literal}
</head>
<body>
<table class="hovertable" width="100%" border="0" cellpadding="0" cellspacing="1" bgcolor="#417eb7"  >
<caption><h1>积分商城订单列表</h1></caption>
<tr>
    <form method="post" action="/mall/orderlist" enctype="multipart/form-data">
	    <td>订单id</td>
	    <td>
	    	{if $orderid}
	    		<input type='text' name='orderid' value="{$orderid}" />
	    	{else}
	    		<input type='text' name='orderid' value='' />
	    	{/if}
	    </td>
	    <td>用户名</td>
	    <td>
	    	{if $username}
	    		<input type='text' name='username' value="{$username}" />
	    	{else}
	    		<input type='text' name='username' value="" />
	    	{/if}
	    </td>
	    <td>
	      <input type="submit" value="查询" />
	    </td>
    </form> 
</tr>
<tr class="table-head" bgcolor="#2d68a0">
	<th>ID</th>
	<th>订单号</th>
    <th>用户名</th>
    <th>appkey</th>
    <th>商品ID</th>
    <th>单价（积分）</th>
    <th>数量</th>
    <th>总价（积分）</th>
   	<th>订单状态</th>
   	<th>时间</th>
   	<th>下单ip</th>
    <th>修改ip</th>
    <th>操作</th>
</tr>
{foreach $order_list as $order}
<tr class="tbody" bgcolor="#FFFFFF">
	<td>{$order.id}</td>
    <td>{$order.orderid}</td>
    <td>{$order.username}</td>
    <td>{$order.appkey}</td> 
    <td>{$order.goodsid}</td> 
    <td>{$order.points}</td>    
    <td>{$order.num}</td>
    <td>{$order.total}</td>    
    <td>{$order.flag}</td>
    <td>{$order.utime}</td>
    <td>{$order.cip}</td> 
    <td>{$order.uip}</td>   
    <td></td>
</tr>
{/foreach}
</table>
<div class="pages">
  <ul class="pagination-digg">
 	<li class="previous"><a href="?page=1">&laquo;First</a></li>   
		{if $cur_page gt 1}
  	<li class="previous"><a href="?page={$cur_page-1}">&laquo;Previous</a></li>
		{else}
  	<li class="previous-off"> &laquo;Previous</li>
		{/if}
		{if $endNum lt $allpage}	
	         {for $p=$startNum to $endNum}
	                
	                     {if $cur_page eq $p}
	                     <li class="active">{$p}</li>
	                     {else}
	                     <li><a href="?page={$p}">{$p}</a></li> 
	                     {/if}
	                   
	          {/for} 
	     {else}
	        {for $p=$startNum to $allpage}
	                
	                     {if $cur_page eq $p}
	                     <li class="active">{$p}</li>
	                     {else}
	                     <li><a href="?page={$p}">{$p}</a></li> 
	                     {/if}
	                   
	          {/for}     
	     {/if}     
        
		{if $cur_page lt $allpage}
		    <li class="next">
		    <a href="?page={$cur_page+1}">Next &raquo;</a>
		    </li>
		{else}
		    <li class="next-off">
		    Next &raquo;
		    </li>
		{/if}
   <li class="next">
    <a href="?page={$allpage}">Last &raquo;</a>
    </li>
    <li class="next-off">
   {$cur_page}/{$allpage} Page
    </li>
       
  </ul>
</div>
</body>
</html>