	/**
	 * 广告数据同步
	 */
	public function synclAction()
	{
		//从配置文件中获取允许同步IP
		$ip = array("171.221.199.56","112.193.220.232");
		//获取当前IP
		$curIp = real_ip();
		if(in_array($curIp,$ip))
		{
			//同步rhi_idc-rht_train
			//229 rhi_idc==>rht_train
			$this->idcToTrain();
			//ftp同步文件获取
			$appkey = reqstr('appkey','');
			if($appkey)
			{
				$fileReturn = $this->adsFilesPost($appkey);
				if($fileReturn['result'] == 'SUCCESS')
				{
					$host = reqstr('host','');
					//$host = 'm.wonaonao.com';
					$adsStr = '';
					foreach($fileReturn['msg'] as $one)
					{
						if($one['flag'])
						{
							$adsStr = $adsStr ? $adsStr . ',' . $one['id'] : $one['id'];
						}
					}
					$data = array('ids'=>$adsStr);
					$url = $host . '/news_and_ads.php?act=adsdb';
					$return = http_post_array($url, $data);
					
					if($return['msgcode'] == 200)
					{
						foreach($fileReturn['msg'] as &$one)
						{
							if(!in_array($one['id'],$return['msg']))
							{
								$one['flag'] = false;
								$one['info'] = $one['info'][0] . ',数据库同步失败';
							}
							else 
							{
								$one['info'] = $one['info'][0] . ',数据库同步成功';
								//数据库标识为修改
								$field = "appkeys";
								$where = array('id'=>$one['id']);
								$model = new Psys_AdsModel();
								$result = $model->GetOne($where,$field);
								$server = $result['appkeys'];
								$server = $server ? $server . ',' . $appkey : $appkey;
								$updateData = array('appkeys'=>$server);
								$model->UpdateOne($updateData, $where);
							}
						}
						return $fileReturn;
					}
					else 
					{
						return array('result'=>'ERROR','msg'=>'请求失败,错误代码：' . $return['msgcode']);
					}
				}
				else
				{
					return $fileReturn;
				}
			}
			else
			{
				return array('result'=>'ERROR','msg'=>'参数未空！');
			}
		}
		else
		{
			return array('result'=>'ERROR','msg'=>'不可允许IP同步！');
		}
	}
	
