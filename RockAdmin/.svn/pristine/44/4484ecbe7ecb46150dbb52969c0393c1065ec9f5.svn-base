						}
					}
					$return = array('result'=>'SUCCESS','msg'=>$msg);
				}
				else 
				{
					$return = array('result'=>'ERROR','msg'=>'FTP服务器登录失败！');
				}
			}
			else
			{
				$return = array('result'=>'ERROR','msg'=>'FTP服务器连接失败！');
			}
		}
		else
		{
			$return = array('result'=>'EMPTY','msg'=>'当前服务器无数据需要同步！');
		}
		$return['server'] = $appkey;
		$return['time'] = date('Y-m-d H:i:s');
		return $return;
	}
}

