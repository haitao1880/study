<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>站台修改添加</title>
<script type="text/javascript" src="{$psys_js}lib/jquery-1.11.1.js"></script>
<link type="text/css" rel="stylesheet" href="{$psys_css}table.css" />
{literal}
<script language="javascript" type="text/javascript">
$(document).ready(function(){
	$("#headimg input").change(function(){
		 var filename = '';
		 var files = this.files;
		 $.each(files, function(i, file){     
			filename = filename ? filename+','+file.name : file.name;
		 });
		 $("#headimg_tips").text('已选择图片：'+filename);
	});
	$("#imgs input").change(function(){
		 var filename = '';
		 var files = this.files;
		 $.each(files, function(i, file){     
			filename = filename ? filename+','+file.name : file.name;
		 });
		 $("#imgs_tips").text('已选择图片：'+filename);
	});
	$("#headimg_action").click(function(){
		var filename = $("#headimg_tips").text();
		if(filename == '')
		{
			alert("请选择上传图片");
		}
		else
		{
			$("#headimg").submit();
		}
	});
	$("#imgs_action").click(function(){
		var filename = $("#imgs_tips").text();
		if(filename == '')
		{
			alert("请选择上传图片");
		}
		else
		{
			$("#imgs").submit();
		}
	});	
 });
function callbackFunction(str)
{
	var jsonobj=eval('('+str+')');
	if(jsonobj.result == 'success')
	{
		
		$("input[name='"+jsonobj.whe+"']").val(jsonobj.img_name);
		$("#"+jsonobj.whe+"_tips").css('color','green').text(jsonobj.msg);
	}
	else
	{
		$("#"+jsonobj.whe+"_tips").css('color','red').text(jsonobj.msg);
	}
}

</script>
<style type="text/css">
*
{
	margin:0px;
	padding:0px;
	border:0px;
}
#wrap
{
	position:relative;
	width:1400px;
}
#addform table tr td input
{
	height:26px;
	padding-left:3px;
}


#addform table tr td label span
{
	border:1px solid gray;
	margin-left:20px;
	padding:5px;
	font-size:16px;
}
#img_form input
{
	width:74px;
	filter: alpha(opacity : 0);
	opacity: 0;
}
#headimg,#imgs,#map
{
	position:absolute;
	left:688px;
}
#headimg
{
	top:234px;
}
#imgs
{
	top:279px;
}
#mapimg_tips,#imgs_tips,#headimg_tips
{
	margin-left:10px;
}
textarea
{
	border:1px solid rgb(169, 169, 169);
	width: 400px;
	height: 100px;
	max-width: 400px;
	max-height: 100px;
	margin-top:15px;
}
table tr td .error
{
	border:1px solid red;
}
</style>
{/literal}
</head>
<body>
	<div id="wrap">
		<form class="add" id="addform" action="/trip/cityEdit" method="POST" enctype="multipart/form-data">
			<table class="add-table" width="100%" border="0" cellpadding="0">
				<caption>
					<h1>{if $spot}旅游景点编辑{else}旅游景点添加{/if}</h1>
				</caption>
				<tr>
					<td width="30%" align="right">景点名称：</td>
					<td width="70%" align="left"><input type="text" name="name" value="{$spot.name}"/></td>
				</tr>
				<tr>
					<td width="30%" align="right">所在城市：</td>
					<td width="70%" align="left"><input type="text" name="cityname" value="{$spot.cityname}" /><label id="city_tips" style="color:red;margin-left:10px;font-size:14px"></label></td>
				</tr>
				<tr>
					<td width="30%" align="right">景点封面：</td>
					<td width="70%" align="left"><input type="text"	name="headimg"  value="{$spot.headimg}" readonly /><label><span>选择图片</span><span id="headimg_action">图片上传</span></label><span id="headimg_tips"></span></td>
				</tr>
				<tr>
					<td width="30%" align="right">景点图集：</td>
					<td width="70%" align="left"><input type="text"	name="imgs"  value="{$spot.imgs}" readonly /><label><span>选择图片</span><span id="imgs_action">图片上传</span></label><span id="imgs_tips"></span></td>
				</tr>
				<tr>
					<td width="30%" align="right">景点星级：</td>
					<td width="70%" align="left"><input type="text" name="star" value="{$spot.star}"/> 星</td>
				</tr>
				<tr>
					<td width="30%" align="right">景点标签：</td>
					<td width="70%" align="left"><input type="text" name="label" value="{$spot.label}"/></td>
				</tr>
				<tr>
					<td width="30%" align="right">景点地址：</td>
					<td width="70%" align="left"><input type="text" name="adress" value="{$spot.adress}"/></td>
				</tr>
				<tr>
					<td width="30%" align="right">是否热门：</td>
					<td width="70%" align="left">
						<input class="check-box" name="hot" type="radio" value="1" {if $spot.hot == 1}checked{/if}><label>是</label>
						<input class="check-box" name="hot" type="radio" value="0" {if $spot.hot == 0}checked{/if}><label>否</label>
					</td>
				</tr>
				<tr>
					<td width="30%" align="right">开放时间：</td>
					<td width="70%" align="left"><input type="text" name="bustime" value="{$spot.bustime}"/></td>
				</tr>
				<tr>
					<td width="30%" align="right">票价：</td>
					<td width="70%" align="left"><input type="text" name="ticket" value="{if $spot.ticket}$spot.ticket{else}0{/if}"/> 元</td>
				</tr>
				<tr>
					<td width="30%" align="right">景点简介：</td>
					<td width="70%" align="left"><textarea>{$spot.remark}</textarea></td>
				</tr>
				<tr>
					<td width="30%" align="right">状&nbsp;&nbsp;态：</td>
					<td width="70%" align="left">
						<input id="state" class="check-box" name="flag" type="radio" value="1" {if $spot.flag == 1}checked{/if}><label>正常</label>
						<input id="state" class="check-box" name="flag" type="radio" value="0" {if $spot.flag == 0}checked{/if}><label>停用</label>
					</td>
				</tr>
				<tr>
					<td colspan="2" align="center">
						<input type="hidden" name="spot_id" value="{$spot.id}" />
						<input type="hidden" name="city_id"  value="{$spot.cityid}" />
						<input type="button" id="btnSave" value="保 存" />
					</td>
				</tr>
			</table>
		</form>
		<div id="img_form">
			<form id="headimg" action="/trip/upload" target="img_iframe" method="post" enctype= "multipart/form-data"><input type="hidden" name="whe" value="headimg" /><input type="hidden" name="type" value="2" /><input type="file" name='file[]' ></form>
			<form id="imgs" action="/trip/upload" target="img_iframe" method="post" enctype= "multipart/form-data"><input type="hidden" name="whe" value="imgs" /><input type="hidden" name="type" value="2" /><input type="file" name='file[]' multiple></form>
			<iframe name="img_iframe"></iframe>
		</div>
	</div>
	
	{literal}
	<script type="text/javascript">
		$(document).ready(function(){
			$("input[name='cityname']").blur(function(){
				var name = $(this).val();
				$.ajax({
		            type: "POST",
		            url: "/trip/citysearch",
		            data: {'ajax':1,'name':name},
		            dataType: "json",
		            success: function(data){
						if(data.result == 'SUCCESS')
						{
							$("input[name='city_id']").val(data.city.id);
							$("input[name='cityname']").removeClass("error");
							$("#city_tips").text("");
						}
						else
						{
							$("input[name='cityname']").addClass("error");
							$("#city_tips").text('请确认城市简介中是否有该城市信息');							
						}
		            }       
		        });				
				});
			
			$("#btnSave").click(function(){
				var spot_id = $("input[name='spot_id']").val();
				var city_id = $("input[name='city_id']").val();
				var name = $("input[name='name']").val();
				
				var headimg = $("input[name='headimg']").val();
				var imgs = $("input[name='imgs']").val();
				var star = $("input[name='star']").val();
				var label = $("input[name='label']").val();
				var adress = $("input[name='adress']").val();
				var hot = $("input[name='hot']:checked").val();

				var bustime = $("input[name='bustime']").val();
				var ticket = $("input[name='ticket']").val();
				
				var remark = $("textarea").val();
				var flag = $("input[name='flag']:checked").val();

				if(!name)
				{
					alert('请输入站点名！');return;
				}
				if(!city_id)
				{
					alert('请输入景点所在城市！');return;
				}
				if(!headimg)
				{
					alert('请上传景点封面图片！');return;
				}
				if(!imgs)
				{
					alert('请上传景点图片集！');return;
				}
				if(!star)
				{
					alert('请输入该景点星级！');return;
				}
				if(!label)
				{
					alert('请输入该景点标签！');return;
				}
				if(!adress)
				{
					alert('请输入该景点地址！');return;
				}
				if(!bustime)
				{
					alert('请输入该景点开放时间！');return;
				}
				if(!remark)
				{
					alert('请编辑城市简介！');return;
				}
				$.ajax({
		            type: "POST",
		            url: "/trip/spotupdate",
		            data: {'ajax':1,'ispost':1,'spot_id':spot_id,'city_id':city_id,'name':name,'headimg':headimg,'imgs':imgs,'star':star,'label':label,'adress':adress,'hot':hot,'bustime':bustime,'ticket':ticket,'remark':remark,'flag':flag},
		            dataType: "json",
		            success: function(data){
						if(data.result == 'SUCCESS')
						{
							if(confirm('操作成功，点击【确定】继续添加，点击【取消】返回列表'))
							{
								window.location.reload();
							}
							else
							{
								window.location.href="/trip/spotslist";
							}
						}
						else
						{
							alert('操作失败');
						}
		                }             
		        });


				
				});
			});
	</script>
	{/literal}

</body>
</html>